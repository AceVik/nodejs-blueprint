{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": ["node", "jest"],
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["*"],
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
  "include": [
    "src/**/*",
    "eslint.config.mjs"
  ],
  "exclude": ["node_modules", "dist"]
}